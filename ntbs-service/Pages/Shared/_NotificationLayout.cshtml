@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["PatientId"] = Context.Request.Query["id"].ToString();
    var splitUrlPath = Context.Request.Path.ToString().Split("/");
    ViewData["currentPage"] = splitUrlPath[splitUrlPath.Length-1];
}
<!DOCTYPE html>
<html>
<body>
    <div style="margin-bottom: 20px"> Notification number X placeholder </div>
    <div class="patient-layout-flexbox">
        <div class="contents-list">
            <!-- Overview available if notification has been submitted -->
            @if (ViewData["OverviewAvailable"] as bool? ?? false)
            {
                <li class="@("contents-list-item " + (ViewData["currentPage"].ToString() == "overview" ? "contents-list-item--current" : ""))">
                    <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/Notifications/Overview?id=" + @(ViewData["PatientId"])>Overview</a>
                </li>
            }
            <li class="@("contents-list-item " + (ViewData["currentPage"].ToString() == "Patient" ? "contents-list-item--current" : ""))">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/Notifications/Edit/Patient?id=@ViewData["PatientId"]">Person details</a>
            </li>
            <li class="@("contents-list-item " + (ViewData["currentPage"].ToString() == "Episode" ? "contents-list-item--current" : ""))">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/Notifications/Edit/Episode?id=@ViewData["PatientId"]">Hospital details</a>
            </li>
            <li class="@("contents-list-item " + (ViewData["currentPage"].ToString() == "ClinicalTimelines" ? "contents-list-item--current" : ""))">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/Notifications/Edit/ClinicalTimelines?id=@ViewData["PatientId"]">Clinical Timeline</a>
            </li>
            <li class="@("contents-list-item " + (ViewData["currentPage"].ToString() == "contactTracing" ? "contents-list-item--current" : ""))">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/Notifications/Edit/Patient?id=@ViewData["PatientId"]">Contact Tracing</a>
            </li>
            <li class="@("contents-list-item " + (ViewData["currentPage"].ToString() == "socialRiskFactors" ? "contents-list-item--current" : ""))">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/Notifications/Edit/Patient?id=@ViewData["PatientId"]">Social Risk Factors</a>
            </li>
            <li class="@("contents-list-item " + (ViewData["currentPage"].ToString() == "travelVisitorHistory" ? "contents-list-item--current" : ""))">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/Notifications/Edit/Patient?id=@ViewData["PatientId"]">Travel/visitor history</a>
            </li>
            <li class="@("contents-list-item " + (ViewData["currentPage"].ToString() == "comordbidities" ? "contents-list-item--current" : ""))">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/Notifications/Edit/Patient?id=@ViewData["PatientId"]">Co-morbidities</a>
            </li>
            <li class="@("contents-list-item " + (ViewData["currentPage"].ToString() == "immunosupression" ? "contents-list-item--current" : ""))">
              <a class="app-subnav__link govuk-link govuk-link--no-visited-state" href="/Notifications/Edit/Patient?id=@ViewData["PatientId"]">Immunosupression</a>
            </li>
        </div>
        <div style="width: 100%"> 
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>

@model ICollection<ntbs_service.Models.ManualTestResult>

@{ var header = Model.FirstOrDefault(); }

<nhs-table id="manual-results" caption="Manual Results">
    <nhs-table-head>
        <nhs-table-item>
            @Html.DisplayNameFor(_ => header.TestDate)
        </nhs-table-item>
        <nhs-table-item>
            @Html.DisplayNameFor(_ => header.ManualTestType)
        </nhs-table-item>
        <nhs-table-item>
            @Html.DisplayNameFor(_ => header.SampleType)
        </nhs-table-item>
        <nhs-table-item>
            @Html.DisplayNameFor(_ => header.Result)
        </nhs-table-item>
    </nhs-table-head>
    <nhs-table-body>
    @foreach (var result in Model)
    {
        <nhs-table-body-row>
            <nhs-table-item>
                @(result.TestDate.ToString("dd-MMM-yyyy"))
            </nhs-table-item>
            <nhs-table-item>
                @result.ManualTestType.Description
            </nhs-table-item>
            <nhs-table-item>
                @result.SampleType.Description
            </nhs-table-item>
            <nhs-table-item>
                @result.Result
            </nhs-table-item>
        </nhs-table-body-row>
    }
    </nhs-table-body>
</nhs-table>
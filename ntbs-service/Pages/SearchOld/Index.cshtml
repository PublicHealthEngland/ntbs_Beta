@page
@model ntbs_service.Pages.SearchOld.IndexModel

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<h4>Parameters</h4>
<hr />
<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="SearchRequest.NhsNumber"></label>
            <input asp-for="SearchRequest.NhsNumber" />
            <span asp-validation-for="SearchRequest.NhsNumber"></span>
        </div>
        <div>
            <input type="submit" value="Search" />
        </div>
    </form>
</div>
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].FamilyNames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].GivenNames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].NhsNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].DateOfBirth)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Results[0].DateOfNotification)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyNames)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GivenNames)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhsNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfNotification)
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model ntbs_service.Pages_Search.IndexModel

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<h4>Parameters</h4>
<hr />
<div class="table">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchRequest.NhsNumber" class="control-label"></label>
                <input asp-for="SearchRequest.NhsNumber" class="form-control" />
                <span asp-validation-for="SearchRequest.NhsNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].FamilyNames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].GivenNames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].NhsNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].DateOfBirth)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Results[0].DateOfNotification)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Results) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyNames)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GivenNames)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhsNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfNotification)
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

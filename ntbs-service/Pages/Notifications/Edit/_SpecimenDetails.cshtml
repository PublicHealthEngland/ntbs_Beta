@model IEnumerable<ntbs_service.Models.Entities.Specimen>

@if (Model.Count() > 0)
{
    <h2>Summary by specimen</h2>
    <div>
        @foreach (var specimen in @Model)
        {
            <div class="notification-specimen-summary">
                <h3>Specimen #@specimen.ReferenceLaboratoryNumber</h3>
                <div>
                    <nhs-grid-row>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Lab reference </dt>
                            <dd class="cell-min-height"> @specimen.ReferenceLaboratoryNumber </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Specimen date </dt>
                            <dd class="cell-min-height"> @specimen.FormattedSpecimenDate </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Specimen type </dt>
                            <dd class="cell-min-height"> @specimen.SpecimenTypeCode </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Species </dt>
                            <dd class="cell-min-height"> @specimen.Species </dd>
                        </nhs-grid-column>
                    </nhs-grid-row>
                    <nhs-grid-row>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Species </dt>
                            <dd class="cell-min-height"> @specimen.Species </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Isoniazid </dt>
                            <dd class="cell-min-height"> @specimen.Isoniazid </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Rifampicin </dt>
                            <dd class="cell-min-height"> @specimen.Rifampicin </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Pyrazinamide </dt>
                            <dd class="cell-min-height"> @specimen.Pyrazinamide </dd>
                        </nhs-grid-column>
                    </nhs-grid-row>
                    <nhs-grid-row>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Ethambutol </dt>
                            <dd class="cell-min-height"> @specimen.Ethambutol </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Aminoglycocide </dt>
                            <dd class="cell-min-height"> @specimen.Aminoglycocide </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> Quinolone </dt>
                            <dd class="cell-min-height"> @specimen.Quinolone </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> MDR </dt>
                            <dd class="cell-min-height"> @specimen.MDR </dd>
                        </nhs-grid-column>
                    </nhs-grid-row>
                    <nhs-grid-row>
                        <nhs-grid-column grid-column-width="OneQuarter">
                            <dt class="notification-test-results-label"> XDR </dt>
                            <dd class="cell-min-height"> @specimen.XDR </dd>
                        </nhs-grid-column>
                    </nhs-grid-row>
                </div>
                
                <br>
                <h3>Patient Details</h3>

                <div>
                    <nhs-grid-row>
                        <nhs-grid-column grid-column-width="OneThird">
                            <dt class="notification-test-results-label"> NHS number </dt>
                            <dd class="cell-min-height"> @specimen.PatientNhsNumber </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneThird">
                            <dt class="notification-test-results-label"> Fullname </dt>
                            <dd class="cell-min-height"> @specimen.PatientName </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneThird">
                            <dt class="notification-test-results-label"> Sex </dt>
                            <dd class="cell-min-height"> @specimen.PatientSex </dd>
                        </nhs-grid-column>
                    </nhs-grid-row>
                    <nhs-grid-row>
                        <nhs-grid-column grid-column-width="OneThird">
                            <dt class="notification-test-results-label"> Date of birth </dt>
                            <dd class="cell-min-height"> @specimen.FormattedPatientDob </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneThird">
                            <dt class="notification-test-results-label"> Address </dt>
                            <dd class="cell-min-height"> @specimen.PatientAddress </dd>
                        </nhs-grid-column>
                        <nhs-grid-column grid-column-width="OneThird">
                            <dt class="notification-test-results-label"> Postcode </dt>
                            <dd class="cell-min-height"> @specimen.PatientPostcode </dd>
                        </nhs-grid-column>
                    </nhs-grid-row>                
                </div>
            </div>
        }
    </div>
}
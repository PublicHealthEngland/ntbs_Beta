<nav class="nhsuk-pagination" role="navigation" aria-label="Pagination">
    <ul class="nhsuk-list nhsuk-pagination__list">

        @if (!(ViewData["FirstPage"] as bool?) ?? true) 
        {
        <li class="nhsuk-pagination-item--previous">
            <!-- The inbuilt NHS pagination only supports an <a> tag but we need a button to submit the form, extra styling has been added to remove
                the base html styling of the button element and match the NHS style with "remove-button-styling-add-orange-hover" -->
            <button asp-page-handler="PreviousPage" type="submit"
                class="remove-button-styling-add-orange-hover nhsuk-pagination__link nhsuk-pagination__link--prev text-align-left">
                <span class="nhsuk-pagination__title">Previous</span>
                <span class="nhsuk-u-visually-hidden">:</span>
                <span class="nhsuk-pagination__page">@ViewData["PreviousPage"]</span>
                <svg class="nhsuk-icon nhsuk-icon__arrow-left" xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24" aria-hidden="true">
                    <path
                        d="M4.1 12.3l2.7 3c.2.2.5.2.7 0 .1-.1.1-.2.1-.3v-2h11c.6 0 1-.4 1-1s-.4-1-1-1h-11V9c0-.2-.1-.4-.3-.5h-.2c-.1 0-.3.1-.4.2l-2.7 3c0 .2 0 .4.1.6z">
                    </path>
                </svg>
            </button>
        </li>
        }

        @if (!(ViewData["LastPage"] as bool?) ?? true) 
        {
        <li class="nhsuk-pagination-item--next">
            <button asp-page-handler="NextPage" type="submit"
                class="remove-button-styling-add-orange-hover nhsuk-pagination__link nhsuk-pagination__link--next text-align-right">
                <span class="nhsuk-pagination__title">Next</span>
                <span class="nhsuk-u-visually-hidden">:</span>
                <span class="nhsuk-pagination__page">@ViewData["NextPage"]</span>
                <svg class="nhsuk-icon nhsuk-icon__arrow-right" xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24" aria-hidden="true">
                    <path
                        d="M19.6 11.66l-2.73-3A.51.51 0 0 0 16 9v2H5a1 1 0 0 0 0 2h11v2a.5.5 0 0 0 .32.46.39.39 0 0 0 .18 0 .52.52 0 0 0 .37-.16l2.73-3a.5.5 0 0 0 0-.64z">
                    </path>
                </svg>
            </button>
        </li>
        }
    </ul>
</nav>
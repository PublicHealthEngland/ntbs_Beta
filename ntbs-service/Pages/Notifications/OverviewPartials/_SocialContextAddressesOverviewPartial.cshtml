@using ntbs_service.Helpers
@using ntbs_service.Models.Enums
@model OverviewModel

@{
    var notificationId = (int)ViewData["NotificationId"];
}

<div class="notification-overview-type-and-edit-container" id="social-context-addresses-overview-details">
    <h3 class="notification-details-type"> Social Context - Addresses </h3>
    @if(Model.PermissionLevel == PermissionLevel.Edit)
    {
        <a href="@RouteHelper.GetNotificationPath(notificationId, NotificationSubPaths.EditSocialContextAddresses)"
        class="notification-edit-link govuk-link--no-visited-state"> Edit </a>
    }
</div>
@if(Model.Notification.SocialContextAddresses.Count > 0)
{
    <div class="notification-overview-details-container">
        <partial name="_SocialContextAddressesTable" for="Notification.SocialContextAddresses" view-data=@ViewData />
    </div>
}
@using ntbs_service.Helpers
@using ntbs_service.Models.Enums
@model OverviewModel

@{
    var sectionSubPath = NotificationSubPaths.EditSocialRiskFactors;
}

<div class="notification-overview-type-and-edit-container" id="@OverviewSubPathToAnchorMap.GetOverviewAnchorId(sectionSubPath)-title">
    <h3 class="notification-details-type"> Social risk factors </h3>
    @if (Model.PermissionLevel == PermissionLevel.Edit)
    {
        <a href="@RouteHelper.GetNotificationPath(Model.NotificationId, sectionSubPath)"
           class="notification-edit-link govuk-link--no-visited-state">
            Edit
        </a>
    }
</div>
<div class="notification-overview-details-container" id="@OverviewSubPathToAnchorMap.GetOverviewAnchorId(sectionSubPath)">
    <nhs-grid-row>
        <nhs-grid-column grid-column-width="OneQuarter">
            <div class="notification-details-label">
                 @Html.DisplayNameFor(x => x.Notification.SocialRiskFactors.RiskFactorDrugs)
            </div>
            <div class="cell-min-height"> @Model.Notification.SocialRiskFactors.RiskFactorDrugs?.Status </div>
        </nhs-grid-column>
        <nhs-grid-column grid-column-width="OneHalf">
            <div class="notification-details-label">
                 @Html.DisplayNameFor(x => x.Notification.SocialRiskFactors.DrugRiskFactorTimePeriods)
            </div>
            <div> @Model.Notification.SocialRiskFactors.DrugRiskFactorTimePeriods </div>
        </nhs-grid-column>
    </nhs-grid-row>
    <nhs-grid-row>
        <nhs-grid-column grid-column-width="OneQuarter">
            <div class="notification-details-label">
                 @Html.DisplayNameFor(x => x.Notification.SocialRiskFactors.RiskFactorHomelessness)
            </div>
            <div class="cell-min-height"> @Model.Notification.SocialRiskFactors.RiskFactorHomelessness?.Status </div>
        </nhs-grid-column>
        <nhs-grid-column grid-column-width="OneHalf">
            <div class="notification-details-label">
                @Html.DisplayNameFor(x => x.Notification.SocialRiskFactors.HomelessRiskFactorTimePeriods)
            </div>
            <div> @Model.Notification.SocialRiskFactors.HomelessRiskFactorTimePeriods </div>
        </nhs-grid-column>
    </nhs-grid-row>

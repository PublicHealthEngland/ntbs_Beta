@page
@using ntbs_service.Helpers
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "./Shared/_NoForm_Layout.cshtml";
}
<tb-service-filtered-alerts inline-template>
    <div>
        <div class="flex-container">
            <h2 class="alerts-heading"> Alerts </h2>
            <label nhs-label-type="Standard" for="tb-service-filter-dropdown" classes="tb-service-alerts-filter-label">
                Filter by TB Service
            </label>
            <select id="tb-service-filter-dropdown" nhs-select-type="Standard" ref="tbService" asp-items="Model.TbServices" v-on:change="updateTable" classes="tb-service-alerts-filter-dropdown">
                <option> Show all </option>
            </select>
        </div>

        <nhs-table class="notifications-table">
            <nhs-table-head>
                <nhs-table-item>
                    @Html.DisplayNameFor(model => model.Alerts[0].NotificationId)
                </nhs-table-item>
                <nhs-table-item>
                    @Html.DisplayNameFor(model => model.Alerts[0].FormattedCreationDate)
                </nhs-table-item>
                <nhs-table-item>
                    @Html.DisplayNameFor(model => model.Alerts[0].AlertType)
                </nhs-table-item>
                <nhs-table-item>
                    @Html.DisplayNameFor(model => model.Alerts[0].CaseManagerFullName)
                </nhs-table-item>
                <nhs-table-item>
                    @Html.DisplayNameFor(model => model.Alerts[0].HospitalName)
                </nhs-table-item>
                <nhs-table-item>
                    @Html.DisplayNameFor(model => model.Alerts[0].DismissLink)
                </nhs-table-item>
            </nhs-table-head>
            <nhs-table-body>
                @foreach (var item in Model.Alerts) 
                {
                    <nhs-table-body-row ref="@item.TbServiceCode" v-if="TbServiceCode == '@item.TbServiceCode' || TbServiceCode == 'Show all'">
                        <nhs-table-item>
                            @if(item.NotificationId != null) 
                            {
                                <a href="@RouteHelper.GetNotificationPath(NotificationSubPaths.Overview, item.NotificationId ?? 1)" class="govuk-link govuk-link--no-visited-state">
                                    @Html.DisplayFor(_ => item.NotificationId) 
                                </a>
                            }
                        </nhs-table-item>
                        <nhs-table-item>
                            @Html.DisplayFor(_ => item.FormattedCreationDate)
                        </nhs-table-item>
                        <nhs-table-item>
                            <a href="@item.ActionLink">
                                @Html.DisplayFor(_ => item.AlertType)
                            </a>
                        </nhs-table-item>
                        <nhs-table-item>
                            @Html.DisplayFor(_ => item.CaseManager.FullName)
                        </nhs-table-item>
                        <nhs-table-item>
                            @Html.DisplayFor(_ => item.Hospital.Name)
                        </nhs-table-item>
                        <nhs-table-item>
                            <form method="post" asp-page="./Alerts/Dismiss">
                                <input hidden value="@item.AlertId" asp-for="@Model.AlertId" />
                                    <button class="nhsuk-button ntbsuk-button--warning">
                                        Dismiss
                                    </button>
                            </form>
                        </nhs-table-item>
                    </nhs-table-body-row>
                    
                }
            </nhs-table-body>
        </nhs-table>
    </div>
</tb-service-filtered-alerts>

